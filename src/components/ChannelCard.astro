---
import type { YouTubeChannel } from '../types/channel';

interface Props {
  channel: YouTubeChannel;
}

const { channel } = Astro.props;
---

<li class="channel-card">
  <a href={channel.url} target="_blank" rel="noopener noreferrer">
    <div class="channel-content">
      <div class="channel-info">
        <h3>{channel.name}</h3>
        {channel.description && <p class="description">{channel.description}</p>}
      </div>
      <div class="channel-meta">
        {channel.subscriberCount && <span class="subscribers">{channel.subscriberCount}</span>}
      </div>
    </div>
  </a>
</li>

<style>
  .channel-card {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .channel-card a {
    text-decoration: none;
    color: inherit;
    display: block;
    background: var(--surface-1);
    border-radius: 12px;
    padding: 1.25rem;
    transition: all 0.3s;
    border: 1px solid var(--surface-3);
  }

  .channel-card a:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    border-color: var(--primary);
    background: var(--surface-2);
  }

  .channel-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .channel-info h3 {
    font-size: 1.1rem;
    color: var(--text-1);
    font-weight: 600;
    margin: 0;
    background: linear-gradient(90deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .description {
    font-size: 0.9rem;
    color: var(--text-2);
    margin: 0;
    line-height: 1.5;
  }

  .channel-meta {
    display: flex;
    gap: 0.75rem;
    margin-top: auto;
  }

  .subscribers,
  .videos {
    font-size: 0.8rem;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    background: var(--surface-3);
    color: var(--text-2);
    border: 1px solid var(--surface-3);
    transition: all 0.2s;
  }

  .channel-card:hover .subscribers {
    background: var(--primary-light);
    color: white;
    border-color: var(--primary);
  }

  .channel-card:hover .videos {
    background: var(--accent-light);
    color: white;
    border-color: var(--accent);
  }

  @media (max-width: 768px) {
    .channel-card a {
      padding: 1rem;
    }
  }
</style> 